{
  "compilerOptions": {
    /* === File Structure === */
    "rootDir": "./src",
    "outDir": "./dist",

    /* === Target Environment === */
    "target": "ES2020",
    "module": "CommonJS", 
    "lib": ["ES2020"],
    "types": ["node"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* === Decorators & Metadata (Needed for Inversify) === */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    /* === Source & Declaration Maps === */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* === Strictness === */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* === Other === */
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}


